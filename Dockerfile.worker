FROM golang:1.24-alpine AS builder

WORKDIR /app
COPY . .
RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/worker ./cmd/worker

FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/worker /app/worker

# Create non-root user
RUN adduser -D -g '' appuser
USER appuser

CMD ["/app/worker"] 